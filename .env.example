# Environment variables for data extractor
# Copy this file to .env and fill in your values

# Oracle Database Configuration
ORACLE_HOST=oracle-db
ORACLE_PORT=1521
ORACLE_SERVICE=XE
ORACLE_USER=testuser
ORACLE_PASSWORD=testpass

# Application Configuration
OUTPUT_BASE_PATH=./data
LOG_LEVEL=INFO
MAX_WORKERS=4

# Spark Configuration
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# Docker Configuration
VERSION=1.0.0
BUILD_DATE=

# Databricks Configuration (if using Databricks mode)
DATABRICKS_OUTPUT_BASE_PATH=/dbfs/data
DATABRICKS_MAX_WORKERS=4
DATABRICKS_CLUSTER_MODE=shared
DATABRICKS_LOG_LEVEL=INFO